package com.test.design;



public class EvenandOdd {
	
 public static void main(String[] args) {
	
	System.out.println("Enter your number to test");
	num = input.nextInt();
	
	if (num % 2 == 0)
    System.out.println(num+"Entered the number is Even");
	else
		System.out.println(num+"Entered the number is Odd");
 }

}
